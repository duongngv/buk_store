<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label t(".search_for") %>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag t(".search"), name: nil %>
  </p>
<% end %>
<div class="row">
  <ul class="all_books">
    <% @book.each do |book| %>
      <div class="col-sm-4">
        <li class="book_item", id="book-<%= book.id %>">
          <%= link_to image_tag("1.jpg", alt: "Image",
            class: "img-responsive")%>
          <p><%= link_to book.name, "#" %></p>
          <p><%= link_to book.author, "#" %></p>
          <p><%= link_to book.publisher, "#" %></p>
          <%= form_tag cart_item_index_path do %>
            <%= hidden_field_tag :book_id, book.id %>
            <%= submit_tag t(".add_to_cart") %>
          <% end %>
        </li>
      </div>
    <% end %>
  </ul>
  <p><%= will_paginate @book %></p>
</div>
